


<%- include ('layout/header')  %>
<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <h1> edit users (<%= user.name %>) </h1>
<div class="card-body p-4">

    <form action="/update/<%= user._id %> " method="post" id="add-form" enctype="multipart/form-data" >
        <div class="mb-3">
          <label for="exampleInputEmail1">Name</label>
          <input type="text" name="name"  value="<%= user.name %> " placeholder="name">
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1">email</label>
          <input type="email" name="email"  value="<%= user.email %> " placeholder="Password">
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1">phone</label>
            <input type="text" name="phone" value="<%= user.phone  %>"  placeholder="phone"/>
          </div>

          <div class="mb-3">
            <label for="exampleFormControlFile1">select file</label>
              <input type="file" name="image"/>
              <img src="/<%= user.image %> "  width="300" height="500" alt="" mt-1 />
              <input type="hidden"  name="old_image" value="<%= user.image %> " >
            </div>
            <button type="submit" class="btn btn-success"  value="update user" >Submit</button>

      </form>





</div>
                    </div>
    </div>
</div>


