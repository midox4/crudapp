


<%- include ('layout/header')  %>
<div class="container">
    <div class="row my-3">
        <div class="col-lg-12 ">
<% if (message) { %> 
<div class="alert alert-dismissible fade show alert-<%= message.type %> " role="alert"  >
    <button type="button" class="btn-close" aria-label="Close"></button>
            <strong> <%= message.message %> </strong>
    </div>
<% } %> 
<div class="table-responsive">
    <% if(users !='') {%> 
        <table class="table table-striped text-center my-3">
            <thead>
            
                <tr class="table-dark">
                    <th>ID</th>
                    <th>images</th>
                    <th>name</th>
                    <th>email</th>
                    <th>phone</th>
                    <th>action</th>
            
                </tr>
            </thead>
            <tbody>
<% users.forEach((row,index) => { %>
    <tr>
        <td> <%= index %> </td>

        <td> <img src="<%= row.image %> "  width="40" alt=""></td>

        <td><%=row.name %> </td>
        <td><%= row.email %> </td>

        <td><%= row.phone %> </td>

        <td>    
            <a href="/edit/<%= row._id %> " class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
            <a href="/delete/<%= row._id %> " class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>


    
        </td>
    
    </tr>

 
<% }) %>

            </tbody>
            </table>
            
        <% }else { %> 
            <h1 class="text-center text-secondary mt-5"> no user on database recorded:::::!!!</h1>
            <% } %> 


</div>
</div>


<%- include ('layout/footer')  %> 

